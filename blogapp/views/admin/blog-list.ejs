<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("../partials/head") %>
  </head>
  <body>
    <%- include("../partials/nav") %>

    <div class="container mt-3">
      <div class="row">
        <div class="col-md-12 mt-3">
          <table class="table table-border table-striped">
            <thead>
              <tr>
                <th style="width: 50px;">id</th>
                <th style="width: 150px;">resim</th>
                <th>baslik</th>
                <th style="width: 130px;"></th>
              </tr>
            </thead>
            <tbody>
                <tr>
                    <% blogs.forEach(blog => { %>
                     <tr>
                        <td>#<%= blog.blogid %></td>
                        <td><img src="/static/images/<%= blog.resim %>" class="img-fluid" alt=""></td>
                        <td>
                            <%= blog.baslik %>
                        </td>
                        <td>
                            <a class="btn btn-sm btn-primary" href="/adin/blogs/<%= blog.blogid %>">edit</a>
                            <a class="btn btn-sm btn-danger" href="/adin/blogs/<%= blog.blogid %>">delete</a>
                        </td>
                     </tr>
                    <% }) %>
                </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </body>
</html>
